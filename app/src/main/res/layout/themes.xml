<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zenzen.calculator.myapplication.Themes"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:text="Themes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="24sp"
                tools:background="@color/colorPrimaryDark"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:layout_weight="1" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:text="Ceramic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button35"
                    android:background="@drawable/button_bg"
                    android:layout_margin="5dp" />

                <Button
                    android:text="Green on black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button36"
                    android:background="@drawable/button_bg2"
                    android:layout_margin="5dp"
                    android:textColor="#69F0AE" />

                <Button
                    android:text="COUNT DRACULA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button37"
                    android:background="@drawable/button_bg3"
                    android:layout_margin="5dp"
                    android:textColor="#ff7f7f" />

                <Button
                    android:text="Bordered red on white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button38"
                    android:background="@drawable/redwhite"
                    android:layout_margin="5dp"
                    android:textColor="#d50000" />

                <Button
                    android:text="White on black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button39"
                    android:background="@drawable/whitebl"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />

                <Button
                    android:text="Pink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button41"
                    android:background="@drawable/whitepink"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />

                <Button
                    android:text="Orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button42"
                    android:background="@drawable/orange"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />

                <Button
                    android:text="Banana yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button43"
                    android:background="@drawable/yellow"
                    android:layout_margin="5dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>